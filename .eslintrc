{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": 0,
        "spaced-comment": 0,
        "no-undef": 0,
        "no-console": 0,
        "no-trailing-spaces": 0,
        "eol-last": 0,
        "no-unused-vars": 0,
        "consistent-return": "off",
        "comma-dangle": 0,
        "no-shadow": 0,
        "max-len": ["error", { "code": 100 }],
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}